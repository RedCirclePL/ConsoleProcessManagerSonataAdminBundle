{% extends 'SonataAdminBundle:CRUD:base_list_field.html.twig' %}

{% set hours = (value / 3600) | round(0, 'floor') %}
{% set minutes = (value / 60 % 60) | round(0, 'floor') %}
{% set seconds = (value % 60) | round(0, 'floor') %}

{% block field %}
    <div>
        <span>{{ "%02d" | format(hours) }}:{{ "%02d" | format(minutes) }}:{{ "%02d" | format(seconds) }}</span><br />
    </div>
{% endblock %}